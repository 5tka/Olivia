						.price-line
							.left-side
								.discount-wrap
									.discount-text Новогодняя скидка -
									p.discount-amount 20%
							.right-side
								.price-wrap
									span.text Стоимость -
									span.amount 4 850 руб.
						.buy-line
							a.preglagaem__buy-link.btn.btn_gr(href='#') Купить
				.preglagaem__block
					.preglagaem__img-wrap
						img(src='img/prod2.png' alt='Сидушка 3D')
					.preglagaem__block-title Сидушка 3D
